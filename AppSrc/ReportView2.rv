                DFWriteLn
                DFFontSize iFontSize
                DFWritePos "Id"                           (0.08 + 0.85) (iHeaderStyle + Font_Right) -1 0.85
                DFWritePos "Shoe Id"                      (1.01 + 1.79) (iHeaderStyle + Font_Right) -1 1.79
                DFWritePos "Price"                        (2.88 + 2.34) (iHeaderStyle + Font_Right) -1 2.34
                DFWritePos "Quantity"                     (5.3 + 2.04) (iHeaderStyle + Font_Right) -1 2.04
                DFWriteLn

            DFEndHeader

