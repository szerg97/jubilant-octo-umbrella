        Procedure SubHeader1 
            string  sFont 
            integer iFontSize iStyle
            integer iFill iBorder iHeaderStyle

            Move "Times New Roman" to sFont
            Move 10 to iFontSize
            Move (Font_Bold + rgb_dBlue) to iStyle
            Move (Font_Bold + rgb_dBlue) to iHeaderStyle
            Move (rgb_dGrey) to iBorder
            Get DFGetDFColor 242 242 242 to iFill

            DFFont sFont
            DFFontSize iFontSize
            DFBeginHeader DFSubHeader 1
                DFHeaderLineCheck 5
                DFHeaderWrap   HDR_Wrap
                DFHeaderPos    HDR_Left
                DFHeaderFrame  Hdr_Margins 0.01 iBorder iFill
                DFHeaderMargin hm_BottomOuter 0.08
                DFHeaderMargin hm_TopInner    0.04
                DFHeaderMargin hm_BottomInner 0.04

                // display fields to be placed in this sub-header
                DFWritePos "Header:"                         0.1 iHeaderStyle -1 4.9
                DFWritePos PageHeader.id                  5 (iStyle + Font_Right) 0
                DFWriteLn
                DFWritePos "Date:"                       0.1 iHeaderStyle -1 4.9
                DFWritePos PageHeader.date                5 iStyle -1
                DFWriteLn
                DFWritePos "Hours:"                      0.1 iHeaderStyle -1 4.9
                DFWritePos PageHeader.hours               5 (iStyle + Font_Right) 0
                DFWriteLn
                DFWritePos "Line Type:"                       0.1 iHeaderStyle -1 4.9
                DFWritePos Line.type                      5 iStyle -1
                DFWriteLn
                DFWritePos "Name:"                       0.1 iHeaderStyle -1 4.9
                DFWritePos Employee.name                  5 iStyle -1
                DFWriteLn

            DFEndHeader

        End_Procedure 

        Procedure SubHeader2 
            string  sFont 
            integer iFontSize iStyle
            integer iFill iBorder iHeaderStyle

            Move "Times New Roman" to sFont
            Move 10 to iFontSize
            Move (Font_Bold + rgb_dBlue) to iStyle
            Move (Font_Bold + rgb_dBlue) to iHeaderStyle
            Move (rgb_dGrey) to iBorder
            Get DFGetDFColor 242 242 242 to iFill

            DFFont sFont
            DFFontSize iFontSize
            DFBeginHeader DFSubHeader 2
                DFHeaderLineCheck 5
                DFHeaderWrap   HDR_Wrap
                DFHeaderPos    HDR_Left
                DFHeaderFrame  Hdr_Margins 0.01 iBorder iFill
                DFHeaderMargin hm_BottomOuter 0.08
                DFHeaderMargin hm_TopInner    0.04
                DFHeaderMargin hm_BottomInner 0.04

                // display fields to be placed in this sub-header
                DFWritePos "Shoe:"                       0.1 iHeaderStyle -1 4.9
                DFWritePos Shoe.name                      5 iStyle -1
                DFWriteLn

                // write the heading for the body section
                DFFontSize 1 // create a very small space on top and below the horizontal bar
                DFWriteLn
