    End_Object 

    Object oPageFooter_DD is a cPageFooterDataDictionary
        Set DDO_Server To oPageHeader_DD
        Set DDO_Server To oShoe_DD
        Property Number pnStartprice
        Property Number pnStopprice
        Property Number pnStartquantity
        Property Number pnStopquantity

        Procedure OnConstrain 
            Number nStart nStop

            Get pnStartprice To nStart
            Get pnStopprice To nStop

            Case Begin
                Case (nStart <> 0 and nStop <> 0)
                    Constrain PageFooter.price between nStart and nStop
                    Case Break
                Case (nStart <> 0)
                    Constrain PageFooter.price GE nStart
                    Case Break
                Case (nStop <> 0)
                    Constrain PageFooter.price LE nStop
            Case End

            Get pnStartquantity To nStart
            Get pnStopquantity To nStop

            Case Begin
                Case (nStart <> 0 and nStop <> 0)
                    Constrain PageFooter.quantity between nStart and nStop
                    Case Break
                Case (nStart <> 0)
                    Constrain PageFooter.quantity GE nStart
                    Case Break
                Case (nStop <> 0)
                    Constrain PageFooter.quantity LE nStop
            Case End
        End_Procedure 
    End_Object 

